			<id>cqjb</id>
			<properties>
				<profile.active>cqjb</profile.active>
			</properties>
		</profile>

		<!-- 上海荣顺 -->
		<profile>
			<id>shrs</id>
			<properties>
				<profile.active>shrs</profile.active>
			</properties>
		</profile>

		<!--币来网 -->
		<profile>
			<id>shblw</id>
			<properties>
				<profile.active>shblw</profile.active>
			</properties>
		</profile>

		<!--上海善林 -->
		<profile>
			<id>shsl</id>
			<properties>
				<profile.active>shsl</profile.active>
			</properties>
		</profile>

		<!--香港未来 -->
		<profile>
			<id>xgwl</id>
			<properties>
				<profile.active>xgwl</profile.active>
			</properties>
		</profile>

		<!--重庆币商网 -->
		<profile>
			<id>cqbsw</id>
			<properties>
				<profile.active>cqbsw</profile.active>
			</properties>
		</profile>

		<!--江枫币 -->
		<profile>
			<id>jfb</id>
			<properties>
				<profile.active>jfb</profile.active>
			</properties>
		</profile>

		<!--北京渝新 -->
		<profile>
			<id>bjyx</id>
			<properties>
				<profile.active>bjyx</profile.active>
			</properties>
		</profile>

		<!--香港汇信链 -->
		<profile>
			<id>xghxl</id>
			<properties>
				<profile.active>xghxl</profile.active>
			</properties>
